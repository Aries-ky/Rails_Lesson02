<%= render "sessions/form" %>
<h3 class="line_box">ユーザー新規作成</h3>
<%= form_for @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :mail ,"メールアドレス" %></th>
      <td><%= f.text_field :mail %></td>
    </tr>
    <tr>
      <th><%= f.label :pass ,"パスワード" %></th>
      <td><%= f.text_field :pass %></td>
    </tr>
    <tr>
      <th><%= f.label :text ,"自己紹介" %></th>
      <td><%= f.text_area :text %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "登録", class: "menu_btn_left" %></li>
      <li><%= link_to "戻る", "/", class: "menu_btn_left" %></li>
    </ul>
  </div>
<% end %>
