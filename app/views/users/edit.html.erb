<%= render "sessions/form" %>
<p class="line_box">ユーザー編集</p>
<%= form_for @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :mail ,"メールアドレス" %></th>
      <td><%= f.text_field :mail %></td>
    </tr>
    <tr>
      <th><%= f.label :pass ,"パスワード" %></th>
      <td><%= f.text_field :pass %></td>
    </tr>
    <tr>
      <th><%= f.label :image ,"アイコン" %></th>
      <td>
        <% if @user.image? %>
          <%= image_tag @user.image.url, class:"show_image" %>
        <% else %>
          <img src="/assets/default_icon.jpeg" class="show_image">
        <% end %>
        <%= f.file_field :image %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :text ,"自己紹介" %></th>
      <td><%= f.text_area :text %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "編集を完了する", class: "menu_btn_left"  %></li>
      <li><%= link_to "戻る", :user, class: "menu_btn_left"  %></li>
    </ul>
  </div>
<% end %>
