<%= render "sessions/form" %>
<p class="line_box">物件編集</p>
<%= form_for @rental do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :price ,"料金" %></th>
      <td><%= f.text_field :price %></td>
    </tr>
    <tr>
      <th><%= f.label :max_user ,"利用可能人数" %></th>
      <td><%= f.text_field :max_user %></td>
    </tr>
    <tr>
      <th><%= f.label :description ,"紹介文" %></th>
      <td><%= f.text_area :description %></td>
    </tr>
    <tr>
      <th><%= f.label :Aria ,"都道府県" %></th>
      <td><%= f.text_area :Aria %></td>
    </tr>
    <tr>
      <th><%= f.label :address ,"住所" %></th>
      <td><%= f.text_area :address %></td>
    </tr>
    <tr>
      <th><%= f.label :image ,"画像" %></th>
      <td>
        <% if @rental.image? %>
          <%= image_tag @rental.image.url, class:"sab_box" %>
        <% else %>
          <img src="/assets/default_home.jpeg" class="sab_box">
        <% end %>
        <%= f.file_field :image %>
      </td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "編集を完了する", class: "menu_btn_left"  %></li>
      <li><%= link_to "削除", @rental, class: "menu_btn_left", method: :delete, data: { confirm: "本当に削除しますか？" } %></li>
      <li><%= link_to "戻る", "/", class: "menu_btn_left"  %></li>
    </ul>
  </div>
<% end %>
