<%= render "sessions/form" %>
<h3 class="line_box">予約確認</h3>
<table>
  <tr>
    <th>タイトル</th>
    <td><%= @rental.title %></td>
  </tr>
  <tr>
    <th>料金</th>
    <td><%= @rental.price %></td>
  </tr>
  <tr>
    <th>利用可能人数</th>
    <td><%= @rental.max_user %></td>
  </tr>
  <tr>
    <th>説明</th>
    <td><%= @rental.description %></td>
  </tr>
  <tr>
    <th>都道府県</th>
    <td><%= @rental.Aria %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @rental.address %></td>
  </tr>
  <tr>
    <th>登録者</th>
    <td>
      <% if @rental.user_id %>
        <%= User.find(@rental.user_id).name %>
      <% else %>
        登録者名エラー
      <% end %>
    </td>
  </tr>
  <tr>
    <th>画像</th>
    <td>
      <% if @rental.image? %>
        <%= image_tag @rental.image.url, class:"sab_box" %>
      <% else %>
        <img src="/assets/default_home.jpeg" class="sab_box">
      <% end %>
    </td>
  </tr>
</table>

<table>
  <tr>
    <th>宿泊開始日</th>
    <td><%= @borrowed.lodgment_start %></td>
  </tr>
  <tr>
    <th>宿泊終了日</th>
    <td><%= @borrowed.lodgment_end %></td>
  </tr>
  <tr>
    <th>利用人数</th>
    <td><%= @borrowed.user %></td>
  </tr>
  <tr>
    <th>料金</th>
    <td><%= @borrowed.price %></td>
  </tr>
</table>


<%= form_for @borrowed, url: {action: "create"}  do |f| %>

  <%= f.hidden_field :property_id %>
  <%= f.hidden_field :lodgment_start %>
  <%= f.hidden_field :lodgment_end %>
  <%= f.hidden_field :user %>
  <%= f.hidden_field :price %>
  <%= f.hidden_field :user_id %>

  <div class="actions">
    <%= f.submit "確定", class: "menu_btn_left" %>
  </div>

<% end %>
